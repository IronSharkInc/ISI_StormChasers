<IronSharkInc>

    <!-- Consuming a smoothie will negate storm damage -->

    <!-- Stop taking damage -->
    <append xpath="//buff[@name='buffBurnt_Storm_Stage02']/effect_group/requirement[@name='!HasBuff']/@buff">,buffBurntSmoothieRun</append>
    <append xpath="//buff[@name='buffDesert_Storm_Stage02']/effect_group/requirement[@name='!HasBuff']/@buff">,buffOasisSmoothieRun</append>
    <append xpath="//buff[@name='buffSnow_Storm_Stage02']/effect_group/requirement[@name='!HasBuff']/@buff">,buffFrostbiteSmoothieRun</append>
    <append xpath="//buff[@name='buffWasteland_Storm_Stage02']/effect_group/requirement[@name='!HasBuff']/@buff">,buffAtomicSmoothieRun</append>
    
    <!-- Stop warning -->
    <append xpath="//buff[@name='buffBurnt_Storm_Stage02']/effect_group/requirement_group[@op='or']">
        <requirement name="HasBuff" buff="buffBurntSmoothieRun"/>
    </append>
    <append xpath="//buff[@name='buffDesert_Storm_Stage02']/effect_group/requirement_group[@op='or']">
        <requirement name="HasBuff" buff="buffOasisSmoothieRun"/>
    </append>
    <append xpath="//buff[@name='buffSnow_Storm_Stage02']/effect_group/requirement_group[@op='or']">
        <requirement name="HasBuff" buff="buffFrostbiteSmoothieRun"/>
    </append>
    <append xpath="//buff[@name='buffWasteland_Storm_Stage02']/effect_group/requirement_group[@op='or']">
        <requirement name="HasBuff" buff="buffAtomicSmoothieRun"/>
    </append>

</IronSharkInc>