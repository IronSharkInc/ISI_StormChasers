<IronSharkInc>

    <!-- set storm warning duration -->
    <!-- 0.18 is ~30 seconds -->
    <set xpath="//weather[@name='stormbuild']/@duration">0.18</set>
    
    <!-- set duration for all storms -->
    <!-- 0.96 is ~2.5 minutes (matching the max grace time from thermal gear) -->
    <!-- 1.12 is ~3 minutes -->
    <set xpath="//weather[@name='storm']/@duration">1.12</set>

