<IronSharkInc>

    <!-- Adjust storm damage -->
    <!-- default: -2, -1 -->
    <set xpath="//buff[contains(@name, '_Storm_Stage02')]//triggered_effect[@action='AddHealth' and @health='-2']/@health">-4</set>
    <set xpath="//buff[contains(@name, '_Storm_Stage02')]//triggered_effect[@action='AddHealth' and @health='-1']/@health">-2</set>

    <!-- Adjust frequency of storm damage -->
    <!-- default: 1 -->
    <set xpath="//buff[contains(@name, '_Storm_Stage02')]/update_rate/@value">2</set>

    <!-- Adjust grace period (higher tier clothing extends this effect up to 4x + base) -->
    <!-- default: 30 -->
    <set xpath="//triggered_effect[contains(@cvar, 'Stage01BaseTime') and @operation='set']/@value">30</set>

